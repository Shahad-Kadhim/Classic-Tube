<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassicTube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/off_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>




    </style>

    <style name="Theme.ClassicTube.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ClassicTube.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ClassicTube.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    //image category shape
    <style name="ImageShape" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerSize">20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>


    <style name="Background">
        <item name="android:background">@color/off_white</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="tint_save">
        <item name="tint">@color/pink</item>
    </style>

    <style name="tint">
        <item name="tint">@color/off_yellow</item>
    </style>

    <style name="tint_sign">
        <item name="tint">@color/dark_blue</item>
    </style>


    <style name="tint_arrow">
        <item name="tint">@color/dark_blue</item>
    </style>

    <style name="Background_tint">
        <item name="android:backgroundTint">@color/off_white</item>
    </style>


</resources>